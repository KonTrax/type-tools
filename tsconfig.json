{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [ "es6" ],

		"outDir":  "dist",
		"rootDir": "src",

		"declaration":         true,
		"emitDeclarationOnly": true,

    "noEmitOnError": true,

		"newLine": "LF",

		/* Strict Type-Checking Option */
